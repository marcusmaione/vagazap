<div class="form-box">
    <h5>Create a job:</h5>
    <%= simple_form_for [@company, @job] do |f| %>
        <%= f.error_notification %>

        <%= f.input :title,
                    autofocus: true,
                    required: true,
                    :label => "Title:",
                    collection: Job::JOBPOSITIONS %>
        <%= f.input :level,
                    required: true,
                    :label => "Experience level:",
                    collection: Job::JOBLEVELS %>
        <%= f.input :sector,
                    required: true,
                    :label => "Functional area:",
                    collection: Company::FUNCTIONALAREA %>
        <%= f.input :description,
                    required: true,
                    :label => "Description:" %>
        <%= f.input :education_requirement,
                    required: true,
                    :label => "Education requirement:",
                    collection: Course::DEGREELEVELS %>

        <div class="form-actions">
            <%= f.submit class: 'btn-primary', value: "Confirm" %>
        </div>
    <% end %>

    <%= link_to "Back", :back, class: 'text-link' %>
</div>