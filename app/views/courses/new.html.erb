<div class="form-box">
    <h5>Add education:</h5>
    <%= simple_form_for(@course) do |f| %>
        <%= f.error_notification %>

        <%= f.input :level,
                    autofocus: true,
                    required: true,
                    :label => "Level:",
                    collection: Course::DEGREELEVELS %>
        <%= f.input :school,
                    required: true,
                    :label => "School:" %>
        <%= f.input :field,
                    required: true,
                    :label => "Field:" %>
        <%= f.input :complete,
                    as: :boolean,
                    :label => "Complete?" %>

        <div class="form-actions">
            <%= f.submit class: 'btn-primary', value: "Confirm" %>
        </div>
    <% end %>

    <p>You can add more courses later.</p>
    <%= link_to "Back", :back, class: 'text-link' %>
</div>