<div class="form-box">
    <h5>Add experience:</h5>
    <%= simple_form_for(@experience) do |f| %>
        <%= f.error_notification %>

        <%= f.input :company_name,
                    autofocus: true,
                    required: true,
                    :label => "Company name:" %>
        <%= f.input :company_sector,
                    required: true,
                    :label => "Company sector:",
                    collection: Company::COMPANYSECTORS %>
        <%= f.input :title,
                    required: true,
                    :label => "Title:",
                    collection: Job::JOBPOSITIONS %>
        <%= f.input :functional_area,
                    required: true,
                    :label => "Functional area:",
                    collection: Company::FUNCTIONALAREA %>
        <%= f.input :description,
                    required: true,
                    :label => "Description:" %>
        <%= f.input :years,
                    required: true,
                    hint: "Only numbers",
                    :label => "Years of experience:" %>

        <div class="form-actions">
            <%= f.submit class: 'btn-primary', value: "Confirm" %>
        </div>
    <% end %>

    <p>You can add more experiences later.</p>
    <%= link_to "Back", :back, class: 'text-link' %>
</div>