<div class="form-box">
    <h5>Create your company account:</h5>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |f| %>
        <%= f.error_notification %>

        <%= f.input :name,
                    autofocus: true,
                    required: true,
                    :label => "Company name:" %>
        <%= f.input :sector,
                    required: true,
                    :label => "Industry:",
                    collection: Company::COMPANYSECTORS %>
        <%= f.input :city,
                    required: true,
                    :label => "Location:",
                    collection: User::CITIES %>
        <%= f.input :email,
                    required: true,
                    input_html: { autocomplete: "email" },
                    :label => "Email:" %>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} minimum characters"),
                    input_html: { autocomplete: "new-password" },
                    :label => "Create a password:" %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password" },
                    :label => "Confirm password:" %>

        <div class="form-actions">
            <%= f.submit class: 'btn-primary', value: "Confirm" %>
        </div>
    <% end %>

    <p>Do you have a company account?</p>
    <%= link_to "Log in", new_company_session_path, class: 'text-link' %>
</div>